{
  "name": "ruso-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "This workspace contains the base of a collection of packages.",
  "author": {
    "name": "Ruslan Gonzalez",
    "email": "ruslanguns@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruslanguns/ruso-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/ruslanguns/ruso-monorepo/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "nestjs",
    "angular",
    "javascript",
    "common",
    "utils",
    "tools"
  ],
  "scripts": {
    "preversion": "yarn run format && yarn run lint && lerna run build",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "check": "npm-check -u",
    "commit": "git-cz",
    "format": "prettier --write \"packages/**/*.{ts,js,json}\"",
    "lint": "eslint --ext .ts .",
    "setup": "yarn && yarn build",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch",
    "test:cov": "lerna run test:cov",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1001.1",
    "@angular-devkit/build-ng-packagr": "0.1001.1",
    "@angular/animations": "9.1.1",
    "@angular/cli": "9.1.12",
    "@angular/common": "9.1.1",
    "@angular/compiler": "9.1.1",
    "@angular/compiler-cli": "9.1.1",
    "@angular/core": "9.1.1",
    "@angular/language-service": "9.1.1",
    "@angular/platform-browser": "9.1.1",
    "@angular/platform-browser-dynamic": "9.1.1",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@golevelup/nestjs-testing": "0.1.2",
    "@golevelup/ts-jest": "0.3.0",
    "@nestjs/cli": "7.1.2",
    "@nestjs/common": "7.0.7",
    "@nestjs/core": "7.0.7",
    "@nestjs/microservices": "7.0.7",
    "@nestjs/platform-express": "7.0.7",
    "@nestjs/platform-fastify": "7.0.7",
    "@nestjs/platform-socket.io": "7.0.7",
    "@nestjs/platform-ws": "7.0.7",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/websockets": "7.0.7",
    "@types/express": "4.17.8",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "@types/socket.io": "1.4.42",
    "@types/node": "13.13.20",
    "@types/socket.io": "1.4.40",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "codelyzer": "5.2.2",
    "conventional-changelog-cli": "2.1.0",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-sonarjs": "0.5.0",
    "express": "4.17.1",
    "fastify": "2.13.0",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "jest-preset-angular": "8.1.3",
    "lerna": "3.20.2",
    "lint-staged": "10.1.3",
    "ng-packagr": "9.1.0",
    "npm-check": "5.9.2",
    "prettier": "2.0.4",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "snyk": "1.305.1",
    "supertest": "4.0.2",
    "ts-jest": "25.3.1",
    "ts-loader": "6.2.2",
    "ts-node": "8.8.2",
    "tsickle": "0.38.1",
    "tslib": "1.11.1",
    "tslint": "6.1.1",
    "typescript": "3.8.3",
    "zone.js": "0.11.1"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "minimist": "^1.2.2"
  }
}
